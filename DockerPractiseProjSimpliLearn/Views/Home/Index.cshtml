@model DockerPractiseProjSimpliLearn.Models.User
@{
    ViewData["Title"] = "Home Page";
}

<div style="align-content:center;background-color:cadetblue;background-position:center;width:1100px;height:500px;border-radius:25px">


    <h1 style="text-align:center;">Login</h1>

    <hr />

    <div class="align-content-lg-center">
        <form asp-action="Index">
            <div style="text-align:center" asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="text-align:center">
                <label asp-for="UserName"></label> &nbsp;
                <input asp-for="UserName" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group" style="text-align:center">
                <label asp-for="Password"></label>&nbsp;&nbsp;&nbsp;
                <input asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group" style="text-align:center">
                <input type="submit" value="Login" class="btn btn-success" />
                <p style="color:darkseagreen">@ViewBag.Message1</p>
                <br />
                <br />
                <br />
            </div>
        </form>
    </div>
</div>